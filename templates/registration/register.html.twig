{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

   
        
        
        
        

   
    <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Tabs Titles -->
          <h2 class="active"> Sign In </h2>
          <h2 class="inactive underlineHover">Sign Up </h2>
      
          <!-- Icon -->
          <div class="fadeIn first">
            <img src="img/icon.png" id="icon" alt="User Icon" />
          </div>
      
          <!-- Login Form --> {{ form_start(registrationForm) }}
          <form>
            <input type="text" id="login" class="fadeIn second" name="login" placeholder="login"> {{ form_row(registrationForm.pseudo) }}
            <input type="text" id="password" class="fadeIn third" name="login" placeholder="password">{{ form_row(registrationForm.email) }}
            <input type="text" id="password" class="fadeIn third" name="login" placeholder="password">{{ form_row(registrationForm.plainPassword, {
            label: 'Password'}) }}
            <input type="submit" class="fadeIn fourth" value="Log In">
            {{ form_row(registrationForm.agreeTerms) }}
          </form>
       {{ form_end(registrationForm) }}
          <!-- Remind Passowrd -->
          <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
          </div>
      
        </div>
      </div>
{% endblock %}
