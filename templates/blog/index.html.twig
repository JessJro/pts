{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<h1>Blog</h1>
<div class="container-lg">{% for article in articles %} 
    <div class="card">
      <div class="card__header">
        <img src="https://placeimg.com/380/230/nature"  alt="card__image" class="card__image" width="600">
      </div>
      <div class="card__body">
        <span class="tag tag-blue">{{article.theme}}</span>
        <h4>{{article.title}}</h4>
        <p>{{article.introduction}}</p>
      </div>
      <div class="card__footer">
        <a href="{{ path('article', {'slug' : article.slug } ) }}" class="btn-card">Read</a>         
      </div>
    </div>
    <div>
      <div class="card">
        <div class="card__header">
          <img src="https://placeimg.com/380/230/nature"  alt="card__image" class="card__image" width="600">
        </div>
        <div class="card__body">
          <span class="tag tag-red">{{article.theme}}</span>
          <h4>{{article.title}}</h4>
          <p>{{article.introduction}}</p>
        </div>
        <div class="card__footer">
          <a href="{{ path('article', {'slug' : article.slug } ) }}" class="btn-card">Read</a>         
        </div>
      </div>
    </div>{% endfor %}
  </div>
{% endblock %}