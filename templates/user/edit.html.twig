{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

<div class="container">
    <div class="profile-form">
        <div class="card-body text-center">
            {% if app.user.image %}
            <img class="img-nav" width="250" src="/uploads/images/{{ app.user.image }}"/>
              {% else %} 
              <img class="img-nav" width="250" src="/img/profile-user.jpeg"/>
              {% endif %}
        </div>
    <h1 class="mt-4">Vous voulez modifier votre profil?</h1>
   
    {{ form_start(form) }}
    {{ form_label(form.image, 'Changer l\'image') }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.pseudo,{
            label: 'Pseudo'
        }) }}
        
        {{ form_row(form.presentation,{
            label: 'Quelques mots Ã  votre sujet'
        }) }}
    {{ form_end(form) }}
    </div>
</div>



{% endblock %}
